@model BasicDetails
@{ Layout = "_Layout"; ViewBag.Title = "Get Detail by Id";}
 
<h2>Search Detail <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label for="id"> Enter Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Fetch</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Detail</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Date Of Birth</th>
                <th>Gender</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Course</th>
                <th>Course Duration</th>
                <th>Fee Status</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Name</td>
                <td>@Model.DateOfBirth</td>
                <td>@Model.Gender</td>
                <td>@Model.Address</td>
                <td>@Model.Phone</td>
                <td>@Model.Email</td>
                <td>@Model.Course</td>
                <td>@Model.CourseDuration</td>
                <td>@Model.FeeStatus</td>
            </tr>
        </tbody>
    </table>
}