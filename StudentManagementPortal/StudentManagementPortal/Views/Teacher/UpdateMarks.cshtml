    </div>
    <div class="form-group">
        <label asp-for="Sem7"></label>
        <input class="form-control" asp-for="Sem7" />
    </div>
    <div class="form-group">
        <label asp-for="Sem8"></label>
        <input class="form-control" asp-for="Sem8" />
    </div>
    <div class="form-group">
        <label asp-for="TotalMaxMarks"></label>
        <input class="form-control" asp-for="TotalMaxMarks" />
    </div>
    <div class="form-group">
        <label asp-for="TotalObtainedMarks"></label>
        <input class="form-control" asp-for="TotalObtainedMarks" />
    </div>
    <div class="form-group">
        <label asp-for="Percentage"></label>
        <input class="form-control" asp-for="Percentage" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Update</button>
    </div>
</form>

