@model MarksDetails
@{ Layout = "_Layout"; ViewBag.Title = "Get Detail by Id";}
 
<h2>Search Detail <a asp-action="Index" class="btn btn-sm btn-primary">Back</a></h2>
<form method="post">
    <div class="form-group">
        <label for="id"> Enter Id:</label>
        <input class="form-control" name="id" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Fetch</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Detail</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Current Year</th>
                <th>Sem 1 Marks</th>
                <th>Sem 2 Marks</th>
                <th>Sem 3 Marks</th>
                <th>Sem 4 Marks</th>
                <th>Sem 5 Marks</th>
                <th>Sem 6 Marks</th>
                <th>Sem 7 Marks</th>
                <th>Sem 8 Marks</th>
                <th>Total Max Marks</th>
                <th>Total Obtained Marks</th>
                <th>Percentage</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.CurrentYear</td>
                <td>@Model.Sem1</td>
                <td>@Model.Sem2</td>
                <td>@Model.Sem3</td>
                <td>@Model.Sem4</td>
                <td>@Model.Sem5</td>
                <td>@Model.Sem6</td>
                <td>@Model.Sem7</td>
                <td>@Model.Sem8</td>
                <td>@Model.TotalMaxMarks</td>
                <td>@Model.TotalObtainedMarks</td>
                <td>@Model.Percentage</td>
            </tr>
        </tbody>
    </table>
}