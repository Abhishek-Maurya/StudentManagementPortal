@using StudentManagementPortal.Controllers
@model StudentManagementPortal.Models.LoginCredentials

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!doctype html>
<html lang="en">
<head>
    
</head>
<body class="text-center" action="f" >
    @using(Html.BeginForm("Authenticate","Home"))
    {
        
        <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
        <label for="inputEmail" class="sr-only">Email address</label>
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Name", autofocus = "",required=""})
        @Html.ValidationMessageFor(m => m.UserName)
        <label for="inputPassword" class="sr-only">Password</label>
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", required = "" })
        @Html.ValidationMessageFor(m => m.Password)
        <label for="inputRole" class="sr-only">Role</label>
        @Html.TextBoxFor(m => m.Role, new { @class = "form-control", placeholder = "Admin/Teacher/Student", autofocus = "",required=""})
        @Html.ValidationMessageFor(m => m.Role)
        <div class="checkbox mb-3"></div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        <p class="mt-5 mb-3 text-muted">&copy;2020</p>
    }

@if (ViewBag.Message != null)
{
    <script type="text/javascript">

        window.onload = function() {
            alert("@ViewBag.Message");
        };
    </script>
}

</body>
</html>
